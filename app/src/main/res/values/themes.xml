<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--Mudando de DarkActionBar para NoActionBar.
    Isso serve para que possamos criar a nossa própria ActionBar(barra da parte superior da tela)
    e não usar a ActionBar padrão do Android Studio-->
    <style name="Theme.Galeria" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6F83F0</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>